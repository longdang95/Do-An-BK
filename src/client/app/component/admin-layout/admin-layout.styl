

.admin-layout{
  .left-side-menu-bar{
    position absolute ;
    left -230px ;
    top 0;
    .ant-menu-root{
      border-right none !important;
      width 230px !important;
    }
  }
  .header{
    padding 20px 0 ;
    background #0c85d0;

  }
  .main-center{
    min-height 500px;
  }
  .menu-controler{
    margin-top 20px;
  }
  .header-left{
    .menu-item{
      background: #277cea;
      outline: none;
      border: solid 1px #1d72e0;
      color: #fff;
      padding: 10px 20px;
      font-size: 13px;

      border-radius: 5px;
      margin-right 10px;
      &:hover{
        color #277cea;
        background white;
      }
    }
  }
}