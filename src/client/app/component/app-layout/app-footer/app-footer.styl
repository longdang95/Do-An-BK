.app-footer {
  flex: 0 0 auto;
  background-color: #272723;
  color: #a8a8a8;
  font-size: 1.3rem;
  line-height: 1.4;
  .footer-middle{
    padding 30px 0;

    .row {
      width: 100%;
      padding 50px 0;
      border-bottom 1px solid #3d3d38;
      .contact-info-label {
        display: block;
        color: #fff;
        font-weight: 400;
        text-transform: uppercase;
        font-size 15px;
        margin-top:10px
      }
    }
    .widget-title {
      margin-top: 0;
      margin-bottom: 1.4rem;
      color: #fff;
      font-weight 700;
      letter-spacing: 0;
      text-transform: uppercase;
    }
    .social-icons {
      display: flex;
      align-items: center;
    }
    .social-icon {
      width: 3.7rem;
      height: 3.7rem;
      display: inline-flex;
      -ms-flex-align: center;
      align-items: center;
      -ms-flex-pack: center;
      justify-content: center;
      margin-bottom: 0;
      background-color: #33332f;
      color: #fff;
      margin-right 5px;
      font-size: 1.4rem;
      i{
        font-size: 1.4rem;
      }
    }
  }

  .footer-bottom{
    margin-top 30px;
    display flex;
    flex-direction row;
    justify-content space-between;
    align-items center;
  }
  a {
    color: white
  }
  .more-info {
    font-size: 11pt
    line-height 25px
  }

}