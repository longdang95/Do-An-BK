.app-layout {
  .header-fixed {
    position fixed;
    height 40px;
    width 100%
    background #0c85d0;

    &.show {
      display block;
    }

    &.hide {
      display none;
    }
  }

  .mid-area {
    width 100%;
    @media (max-width 480px) {
      .content {
        display none;
      }
    }

    .content {
      width 1200px;
      margin 30px auto;
      justify-content space-between;

      .slide-image {
        float right
        flex 1;
        width 800px;

        img {
          width 800px;
        }
      }

      .top-cate {
        width 280px;
        margin-right 50px;
        border 1px solid #e3e3e3;

        .logo-phone {
          width: 30px;
          display: inline-block;
        }

        h3 {
          text-align center;
          padding 5px;
          background #f4f4f4;
        }

        .sale-info {
          background #0c85d0;
          color white;
          text-align center;
          font-size 20px;
          font-weight 600;
          margin 30px 20px;
          padding 10px 20px;
        }

        .cate-list {
          padding 5px 20px;

          .cate {
            padding 10px;
            font-size 15px;
            border-bottom 1px solid #e3e3e3;
            transition all 0.3s ease-in-out;

            i {
              margin-right 10px;
            }

            &:hover {
              background #0c85d0
              color white;
            }
          }
        }
      }
    }

  }
}

.info-boxes {
  align-items: center;
  justify-content: center;
  background #f4f4f4;

  .info-box {
    flex: 0 0 33.33%;
    justify-content: center;
    background #f4f4f4;
    color #839199;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    width: 100%;
    padding: 1rem 1.5rem;

    &:nth-child(2) {
      border-left 1px solid white;
      border-right 1px solid white;
    }

    i {
      font-size 30px;
      color #465157;
      padding-right 20px;
    }
  }
  @media (max-width 480px) {
    .main-container {
      flex-direction column !important;
    }

    .info-box {
      flex 100% !important;
      .icon-sec{
        width 80px;
      }
      .icon-sec2{
        width 95px;
      }
      justify-content flex-start !important;
    }
  }
}

body {
  .compare-panel {
    width 100%;
    position fixed;
    bottom 0;
    background white;
    opacity 1;

    .btn-compare {
      padding 10px;
      position absolute;
      right 45px;
      border-radius 5px;
      top 50%;
      transform translate(0, -50%)
      background #a8a8a8;

      i {
        margin-right 10px;
      }

      &:hover {
        a {
          color #9df566
        }
      }

      a {
        color white;
      }
    }

    .btn-trash {
      position absolute;
      right 0;
      top 50%;
      font-size 20px;
      transform translate(0, -50%)
      background-color: #dc3545;
      border-radius 5px;
      padding 5px 10px;

      i {
        color #fff000;
      }
    }

    .main-container {
      .compared-device {
        margin 10px;

        img {
          border-radius 5px;
        }
      }
    }
  }

  .main-container {
    width 1200px;
    margin 0 auto;
    display flex;
    position relative;
    flex-direction row;
    @media (max-width 480px) {
      width 100% !important;
    }
  }
  .row{
    margin 0 !important;
    padding 0 !important;
  }
}