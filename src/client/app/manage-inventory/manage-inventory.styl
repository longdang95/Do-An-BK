
.manage-inventory{
  background #fcfcfc
  padding 50px 20px;
  min-height 1000px;
  .stat-inventory{
    .stat-left{
      flex 3 ;
      margin-right 20px;
      .stat-card{
        position relative;
        margin-bottom 20px;
        background white;
        -webkit-box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
        -moz-box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
        box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
        padding 20px 30px;
        i{
          position absolute;
          top 50%;
          font-size 20px;
          right 20px;
          transform translate(0 , -50% )
          padding 10px;
          border-radius 50%;
          color white;
          background #ff350e
        }
      }
    }
    .stat-right{
      -webkit-box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
      -moz-box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
      box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
      flex : 7 ;
    }
  }
}