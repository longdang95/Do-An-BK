.dashboard{
  background #FFFFFF;
  @media (max-width 480px){
    width 100%;
    .sum-header{
      flex-direction column !important;
      .head-card{
        width 100%;
      }
    }
    .payment-info{
      margin-top 20px;
      overflow auto;
    }
  }
  h1 {
    font-weight 700
    width: 100%;
    text-align: center;
    padding: 20px;
  }
  padding 20px 5px;
  .sum-header{
    display flex;
    flex-direction row;
    justify-content space-between
  }
  .head-card{
    border-radius 10px;
    padding 30px 13px ;
    background white ;
    width 32%;
    -webkit-box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
    -moz-box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
    box-shadow: 0px 0px 30px -1px rgba(0,0,0,0.11);
    .sum-cover{
      &.sum-content{
        margin 0 10px;
      }
    }
  }
  .select-product{
    .search-device-wrapper{
      .dropdown-results{
        z-index 100;
      }
    }
  }
  .payment-infomation{
    padding-top 50px;
    .inventory{
      min-height 300px;
    }
    .payment{
      min-height 300px;
    }
  }
}