.discount-info{
  margin-top 40px;

  width 100%;
  border-radius 5px;
  border 1px solid #0c85d0;
  padding 10px;
  position relative;
  .dc-list, h3 {
    margin-top: 15px;
  }
  .dc-item{
    color #0c85d0;
    font-size 14px;
  }
  .dc-title{
    i{
      margin-right 10px;
    }
    position absolute;
    font-size 18px;
    top -20px;
    left 20px;
    padding 5px 15px;
    border-radius 10px;
    background #0c85d0;
    color white;
  }
}